@model List<SMMS.Models.Category>

<h3>Manage Categories</h3>

<br>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
            <th></th>
            <th class="text-center">Show Products</th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td> <a class="btn btn-link" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a> </td>
                <td> <a class="btn btn-link" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.CategoryId" onclick="return confirmDelete()">Delete</a> </td>
                <td class="text-center">
                    <a class="btn btn-sm" style="background-color: #6ab5ef; color: white;" asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.CategoryId">Products</a>
                </td>

            </tr>
        }
    </table>

    <br>

    <a class="btn btn-primary" asp-controller="Categories" asp-action="Add">Add Category</a>
}

@section Scripts
{
    <script>
        function confirmDelete()
        {
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
}
