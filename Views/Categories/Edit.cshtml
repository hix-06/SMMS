@model SMMS.Models.Category


    @if (Model != null)
    {
        <h3>Category: @Model.Name</h3>
    }

    <br>

    <form method ="post" asp-controller="categories" asp-action="edit">

        <input type="hidden" asp-for="CategoryId"/>

        <div class="tet-danger" asp-validation-summary="All"></div>

        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Name" class="form-conrol"></label>
            </div>
            <div class="col">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Description" class="form-conrol"></label>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Save"/>
            </div>
            <div class="col-6">

            </div>
        </div>

    </form>

